{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" }
  ],
  "surroundingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" }
  ],
  "onEnterRules": [
    {
      "beforeText": "<(element|define|if|schema|lang)([^/>]*)?>",
      "afterText": "</\\1>",
      "action": { "indentAction": "indent" }
    },
    {
      "beforeText": "</(element|define|if|schema|lang)>",
      "action": { "indentAction": "outdent" }
    }
  ],
  "wordPattern": "[\\w\\-]+"
}
